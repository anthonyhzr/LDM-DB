<div class="min-h-screen pt-2 my-16 bg-white shadow w-full rounded-lg p-10 xs:p-0 mx-auto md:w-full max-w-3xl items-center">
    <div class="container mx-auto">
        <div class="inputs w-full max-w-2xl p-6 mx-auto">
            <h2 class="text-2xl text-gray-900 text-center">{{firstName}} {{lastName}}</h2>

            <form class="mt-6 border-t border-gray-400 pt-4" method="POST" action="">
                <h2 class="text-2xl text-gray-900">Baby info:</h2>
                <div class="flex items-center justify-between mt-4">
                    <div class='w-full md:w-1/2 px-3'>
                        <p class='block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2' >first name</p>
                        <p class='text-blue-500 py-3 px-4 text-2xl'>{{firstName}}</p>
                    </div>
                    <div class='w-full md:w-1/2 px-3'>
                        <p class='block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2' >last name</p>
                        <p class='text-blue-500 py-3 px-4 text-2xl'>{{lastName}}</p>
                    </div>
                </div>
                <div class="flex items-center justify-between mt-4">
                    <div class='w-full md:w-1/2 px-3 mb-6'>
                        <p class='block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2'>sex</p>
                        <p class='text-blue-500 py-3 px-4 text-2xl'>{{sex}}</p>
                    </div>
                    <div class='w-full md:w-1/2 px-3 mb-6'>
                        <p for="birthdate" class='block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2'>date of birth</p>
                        <p class='text-blue-500 py-3 px-4 text-2xl'>{{birthdate}}</p>
                    </div>
                </div>

                <div class="personal w-full border-t border-gray-400 pt-4">
                    <h2 class="text-2xl text-gray-900 mb-3">Parent info:</h2>
                    <h2 class="text-xl text-purple-900">Father info:</h2>
                    <div class="personal w-1/3 border-t-4 border-purple-400">
                    </div>
                    <div class="flex items-center justify-between mt-4">
                        <div class='w-full md:w-1/2 px-3'>
                            <p class='block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2' >first name</p>
                            <p class='text-green-400 py-3 px-4 text-2xl'>{{fatherFirstName}}</p>
                        </div>
                        <div class='w-full md:w-1/2 px-3'>
                            <p class='block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2' >last name</p>
                            <p class='text-green-400 py-3 px-4 text-2xl'>{{fatherLastName}}</p>
                        </div>
                    </div>
                    <div class="flex items-center justify-between mt-4">
                        <div class='w-full md:w-1/2 px-3 mb-6'>
                            <p class='block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2' >email</p>
                            <p class='text-green-400 py-3 px-4 text-2xl'>{{fatherEmail}}</p>
                        </div>
                        <div class='w-full md:w-1/2 px-3 mb-6'>
                            <p class='block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2' >phone number</p>
                            <p class='text-green-400 py-3 px-4 text-2xl'>{{fatherPhoneNo}}</p>
                        </div>
                    </div>

                    <h2 class="text-xl text-purple-900">Mother info:</h2>
                    <div class="personal w-1/3 border-t-4 border-purple-400">
                    </div>
                    <div class="flex items-center justify-between mt-4">
                        <div class='w-full md:w-1/2 px-3'>
                            <p class='block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2' >first name</p>
                            <p class='text-yellow-500 py-3 px-4 text-2xl'>{{motherFirstName}}</p>
                        </div>
                        <div class='w-full md:w-1/2 px-3'>
                            <p class='block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2' >last name</p>
                            <p class='text-yellow-500 py-3 px-4 text-2xl'>{{motherLastName}}</p>
                        </div>
                    </div>
                    <div class="flex items-center justify-between mt-4">
                        <div class='w-full md:w-1/2 px-3 mb-6'>
                            <p class='block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2' >email</p>
                            <p class='text-yellow-500 py-3 px-4 text-2xl'>{{motherEmail}}</p>
                        </div>
                        <div class='w-full md:w-1/2 px-3 mb-6'>
                            <p class='block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2' >phone number</p>
                            <p class='text-yellow-500 py-3 px-4 text-2xl'>{{motherPhoneNo}}</p>
                        </div>
                    </div>
                    <div class='w-full md:w-full px-3 mb-6'>
                        <p class='block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2' >Comment</p>
                        <p class='text-gray-800 py-3 px-4 text-xl'>{{comment}}</p>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>